<div class="container profilePage">
  <h2 class="profilePage_title">プロフィール</h2>
  <div class="profilePage_user">
    <div class="profilePage_user_image">
      <% if current_user.profile&.avatar&.attached? %>
      <%= image_tag current_user.profile.avatar %>
      <% else %>
      <%= image_tag 'login_avatar.svg' %>
      <% end %>
    </div>
    <div class="profilePage_user_basicInfo">
      <div class="profilePage_user_name">
        <div class="profilePage_user_displayName">
          <%= "#{current_user.display_name}   (所属:#{current_user.profile&.division})" %>
          <%# <%= current_user.display_name %>
        </div>
        <div class="profilePage_user_actionButton">
          <%= link_to 'Edit', edit_profile_path %>
        </div>
      </div>
      <div class="profilePage_user_introduction">
        <%= current_user.profile&.description %>
      </div>
    </div>
  </div>
</div>

<% current_user.boards.each do |boards| %>
<%= link_to board_path(boards) do %>
<div class="board">
  <div class="board_content">
    <div class="board_title">
      <%= boards.title %>
    </div>
    <div class="board_content">
      <%= truncate(boards.content, length:30) %>
    </div>
  </div>
  <div class="card_details_user_image">
      <% if current_user.profile&.avatar&.attached? %>
      <%= image_tag current_user.profile.avatar %>
      <% else %>
      <%= image_tag 'login_avatar.svg' %>
      <% end %>
    <%# <%= image_tag article.user.avatar_image %>
  </div>
</div>
<% end %>
<% end %>

<div class="container">
  <%= link_to new_board_path do %>
    <div class="board_addNew">
      <div class="board_addNew_link">
        <%= link_to '＋ Add new board', new_board_path(@board), class: 'board_addNew_text'%>
      </div>
    </div>
  <% end %>
</div>